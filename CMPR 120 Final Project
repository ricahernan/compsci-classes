#include<iostream>
#include<iomanip>
#include<string>
#include<ctime>
#include<fstream>
#include<climits>

using namespace std;

/*LIMIT FOR INPUT OF FUNDS*/
const double MAX_ALLOWED = 20;

/*GAME FUNCTION HEADER*/
void menu();

int main()
{

	/*GAME FUNCTION*/
	menu();

	system("pause");
	return 0;
}

/*GAME FUNCTION DEFINITION*/
void menu()
{
	double balance = 0;
	double amount = 0;
	int correctGuesses = 0;
	int missedGuesses = 0;

	/*inputYN and userInput for YES/NO INPUT VALIDATION*/
	string playerName, inputYN, userInput;

	/*CASES FOR INPUT VALIDATION AND PROGRAM EXIT*/
	bool quit = false, YN = false;

	/*MENU SELECTION CHARS*/
	char choice;

	/*OPEN AND WRITE FILES*/
	fstream userData;

	cout << setprecision(2) << fixed << showpoint;
	cout << "Please enter username (NO SPACES): ";
	cin >> playerName;
	/*ABOVE SETS PLAYER NAME BEFORE MENU APPEARS*/

	/*DO-WHILE LOOP FOR MENU ALLOWS USER TO SELECT AN OPTION AND BE AUTOMATICALLY 
	REDIRECTED TO THE MENU UNLESS THE USER PRESSES 6 WHICH EXECUTES THE WHILE*/
	do
	{
		/*MENU OUTPUT*/
		cout << "\n***The Winners ***\n" << endl;
		cout << "***MAIN MENU***\n" << endl;

		cout << "\nPlease select one of the following:\n" << endl;
		cout << "\t1: Display my available credit" << endl;
		cout << "\t2: Add credits to my account" << endl;
		cout << "\t3: Play The Guessing Game" << endl;
		cout << "\t4: Display My Statistics" << endl;
		cout << "\t5: Save My Statistics" << endl;
		cout << "\t6: To exit" << endl;
		cin >> choice;
		cout << endl;
		/*MENU SWITCH*/
		switch (choice)
		{

		case '1': cout << "You entered 1: Display my available credit\n";
		{
			/*BALANCE OUTPUT*/
			cout << "Your available balance is: $" << balance << "\n\n";
		}
		break;


		case '2': cout << "You entered 2: Add credits to my account\n";
		{
			/*CASE 2*/
			bool validInput = false;
			do
			{
				
				cout << "Input amount of credits up to $20: ";
				cin >> amount;
				/*INPUT VALIDATION if input doesnt fail, check the following parameters*/
				if (!cin.fail())
				{
					if (amount >= 0 && amount <= 20)
					{
						validInput = true;
						balance += amount;
					}
					else
					{
						cout << "Value must be 0 or less than or equal to 20.\n";
						
					}
				}
				else
				{
					cout << "Value must be a number.\n";
					cin.clear();
					cin.ignore(INT_MAX, '\n');
				}
			} while (!validInput);
			{}
		}
		break;

		case '3': cout << "You entered 3: Play The Guessing Game\n";
		{
			/*CASE 3*/
			bool numberCheck1to10 = false;

			do
			{
				cout << "This game costs $5 dollars to play. Do you wish to proceed? (lowercase) (y/n): ";
				cin >> userInput;

				{
					/*YES/NO Input and input validation*/
					if (userInput == "y") YN = true;
					if (userInput == "n") YN = false;
				}
			} while (userInput != "y" && userInput != "n");
			{}



			/*IF USER ENTERED Y, YN IS NOW TRUE*/
			if (YN == true)
			{
				if (balance >= 5)
				{
					balance -= 5;
					cout << "\nYou paid $5.\n";
					/*RANDOM NUMBER GENERATOR INITIATION*/
					int randomNum, userGuess;
					srand((unsigned)(time(NULL)));

					do
					{
						/*RNG SELECTION*/
						randomNum = rand() % 10 + 1;
						//cout << randomNum << endl;
						cout << "\nGuess a number between 1 and 10. ";
						cin >> userGuess;

						/*INPUT VALIDATION*/
						if (!cin.fail())
						{
							if (userGuess >= 1 && userGuess <= 10)
							{
								numberCheck1to10 = true;
							}
							else
							{
								cout << "\nValue must be 1 or less than or equal to 10.\n";
							}
						}
						else
						{
							/*IF the user inputs a string or a non integer which doesnt
							satisfy the above requirements, the error flag will be cleared
							and the program will skip the integer max up until the newline
							which is decalred by the user as he presses enter after input*/
							cout << "Value must be a number.\n";
							cin.clear();
							cin.ignore(INT_MAX, '\n');
						}
					} while (!numberCheck1to10);
					{}

					/*USER SELECTS VALID INTEGER, THEN THIS EXECUTES*/
					if (userGuess == randomNum)
					{
						cout << "\nYou are correct! You win $50 dollars!\n";
						balance += 50;
						correctGuesses++;
					}
					else
					{
						cout << "\nYou are incorrect. You lose :( \n";
						missedGuesses++;
					}
				}
				else
				{
					cout << "\nNot enough funds required to play game! Add Funds!\n\n";
				}

			}


		}
		break;
		case '4': cout << "You entered 4: Display My Statistics\n";
		{
			/*CASE 4*/
			/*CURRENT SESSION STATS*/
			cout << "\nCurrent Session Stats\n";
			time_t sysTime = time(0);
			char* time = ctime(&sysTime);
			cout << "\nData Time: " << time;
			cout << "Player Name: " << playerName << endl;
			cout << "Available Credit: $" << balance << endl;
			cout << "Games Played: " << correctGuesses + missedGuesses << endl;
			cout << "Correct Guesses: " << correctGuesses << endl;
			cout << "Missed Guesses: " << missedGuesses << endl;
			cout << "Money you won: $" << correctGuesses * 50 << endl;
			cout << "Money you lost: $" << missedGuesses * 5 << endl;

			do
			{
				cout << "\nDo you wish to view your saved stats? (lowercase) (y/n): ";
				cin >> userInput;

				{

					if (userInput == "y") YN = true;
					if (userInput == "n") YN = false;
				}
			} while (userInput != "y" && userInput != "n");
			{}
			/*DATA READING*/
			if (YN == true)
			{
				cout << "Enter a previously saved file name: ";
				cin >> playerName;
				userData.open(playerName);

			}
			if (userData.is_open())
			{
				cout << "\nSaved Stats\n";
				while (getline(userData, playerName))
				{
					cout << playerName << endl;
				}

				userData.close();
			}
			

		}
		break;
		case '5':cout << "You entered 5: Save My Statistics\n";
		{
			/*CASE 5*/
			do
			{
				cout << "Do you wish to save your stats? (lowercase) (y/n): ";
				cin >> userInput;

				{
					
					if (userInput == "y") YN = true;
					if (userInput == "n") YN = false;
				}
			} while (userInput != "y" && userInput != "n");
			{}

			if (YN == true)
			{
				/*DATA SAVING*/
				cout << "Please enter username for save file (NO SPACES): ";
				cin >> playerName;
				userData.open(playerName, ios::app);

				time_t sysTime = time(0);
				char* time = ctime(&sysTime);
					
				userData << "\nData Time: " << time;
				userData << "Player Name: " << playerName << endl;
				userData << "Available Credit: $" << balance << endl;
				userData << "Games Played: " << correctGuesses + missedGuesses << endl;
				userData << "Correct Guesses: " << correctGuesses << endl;
				userData << "Missed Guesses: " << missedGuesses << endl;
				userData << "Money you won: $" << correctGuesses * 50 << endl;
				userData << "Money you lost: $" << missedGuesses * 5 << endl;

				cout << "\nData saved in file: " << playerName << endl;
				userData.close();

			}


		}
		break;
		case '6': cout << "Thank you for using The Winners software. Good bye!\n";
		{
			/*CASE 6*/
			quit = true;
		}
		break;

		default: cout << "You did not enter 1,2,3,4,5, or 6\n\n";
		}




	} while (!quit);
	{}

}

//FOR --CTIME--
